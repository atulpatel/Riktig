@model Riktig.Web.Models.ImageViewModel

@{
    ViewBag.Title = "Request Image";
}

<h2>Request Image</h2>


@using (Html.BeginForm("Request", "Image")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Address</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.SourceAddress)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SourceAddress)
            @Html.ValidationMessageFor(model => model.SourceAddress)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Pending Images", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}